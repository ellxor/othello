warnings = -Wall -Wextra -Wno-unused
optimize = -O3 -march=native
source   = ../src
includes = -I$source

rule cc
  command = cc -c $in -o $out $includes $warnings $optimize

rule link
  command = cc $in -o $out $optimize

build magic.o: cc $source/magic.c
build main.o : cc $source/main.c
build othello: link magic.o main.o

default othello
